export async function getStaticPaths({paginate}) {
  const pamatky = await Astro.glob('./*.md');
  const pamatkySorted= pamatky.sort(
    (a, b) => new Number(a.frontmatter.id).valueOf() - new Number(b.frontmatter.id).valueOf());

  return paginate ( pamatkySorted, { pagesize: 1 });
}

const { page, frontmatter } = Astro.props;
