---
import Card from "../../../../components/Card.astro";
import Layout from "../../../../layouts/Layout.astro";

export async function getStaticPaths({ paginate }) {

const pamatky = await Astro.glob('./*.md');

return pamatky.map(pamatka => ({
  params: {
    lang: pamatka.frontmatter.lang,
    slug: pamatka.frontmatter.slug,
    trasa: pamatka.frontmatter.trasa,
  },
  props: {
     pamatka
  }
}));

}

const { Content, frontmatter } = Astro.props.pamatka;
---

<Layout title={frontmatter.title}>
<div id="pamatka-single" class="md:p-10">
    <section class="flex flex-col-reverse md:flex-row flex-auto basis-1/2">
      {frontmatter.image &&
        <img class="md:max-w-[40%] h-auto aspect-auto md:mr-5 mt-5 md:mt-0 flex-auto" src={frontmatter.image} alt={frontmatter.title} />
      }
      <Card>
      <article class="flex flex-col text-left md:text-justify justify-start items-start space-y-4">
        <h1 class="lg:leading-loose leading-relaxed mb-3">{frontmatter.id}. {frontmatter.title}</h1>
        <Content />
      </article>
    </Card>
  </section>

</div>

</Layout>

