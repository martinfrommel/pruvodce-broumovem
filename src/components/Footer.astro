  <div
    id="copyright"
    class="flex flex-col flex-wrap space-y-4 justify-center items-center"
  >
    <p>
      <span class="font-bold">Kontakt:</span>
      <a
        class="underline"
        href="mailto:info@pruvodcebroumovem.cz"
        target="_self">info@pruvodcebroumovem.cz</a
      >
    </p>
    <div class="flex flex-col space-y-1 sm:inline-flex sm:space-x-1">
      <p class="text-[0.65rem]">
        Vytvořil <a
          class="underline mx-1"
          href="https://martinfrommel.site"
          target="_blank"
        >
          Martin Frommel
        </a> s pomocí
      </p>
      <div class="inline-flex space-x-1 justify-center items-center">
        <a aria-label="Astro" href="https://astro.build" target="_blank"
          ><img aria-hidden="true" class="h-6" src={astroIcon} alt="Astro" />
        </a>
        <a
          aria-label="Tailwind CSS"
          href="https://tailwindcss.com"
          target="_blank"
          ><img
            aria-hidden="true"
            class="h-4"
            src={tailwindIcon}
            alt="TailwindCSS"
          />
        </a>
        <a aria-label="AlpineJS" href="https://alpinejs.dev" target="_blank"
          ><img
            aria-hidden="true"
            class="h-4"
            src={alpinejsIcon}
            alt="Alpine JS"
          />
        </a>
      </div>
    </div>
  </div>
  <!-- </div> -->
</footer>
